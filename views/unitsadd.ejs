<%- include('partials/header')%>

    <body id="page-top">
        <!-- Page Wrapper -->
        <div id="wrapper">
            <%- include('partials/sidebar menu')%>
                <!-- Content Wrapper -->
                <div id="content-wrapper" class="d-flex flex-column">
                    <!-- Main Content -->
                    <div id="content">
                        <%- include('partials/topbar menu')%>
                            <!-- Begin Page Content -->
                            <div class="container-fluid">
                                <!-- Page Heading -->
                                <h3 class="h3 mb-2 text-gray-800">Units</h3>

                                <div class="card shadow mb-4">
                                    <div class="card-header">
                                        <h5 class="m-0 font-weight-bold text-primary">Form add</h5>
                                    </div>
                                    <div class="card-body">
                                        <form id="addUnitForm">
                                            <div class="row mb-3">
                                                <label for="unit" class="col-form-label col-md-2">Unit</label>
                                                <div class="col-md-10 pl-0">
                                                    <input type="text" class="form-control" id="unit" name="unit"
                                                        required placeholder="insert unit">
                                                </div>
                                            </div>
                                            <div class="row mb-3">
                                                <label for="name" class="col-form-label col-md-2">Name</label>
                                                <div class="col-md-10 pl-0">
                                                    <input type="text" class="form-control" id="name" name="name"
                                                        required placeholder="insert name">
                                                </div>
                                            </div>
                                            <div class="row mb-3">
                                                <label for="note" class="col-form-label col-md-2">Note</label>
                                                <div class="col-md-10 pl-0">
                                                    <textarea type="text" class="form-control" id="note" name="note"
                                                        required placeholder="insert note"></textarea>
                                                </div>
                                            </div>
                                    </div>
                                    <div class="card-footer">
                                        <button type="submit" class="btn btn-success btn-icon-split">
                                            <span class="icon text-white-50">
                                                <i class="fa-solid fa-database"></i>
                                            </span>
                                            <span class="text">Save</span>
                                        </button>
                                        </form>
                                        <a href="/units" class="btn btn-warning btn-icon-split">
                                            <span class="icon text-white-50">
                                                <i class="fa-solid fa-rotate-left"></i>
                                            </span>
                                            <span class="text">Back</span>
                                        </a>
                                    </div>
                                </div>

                            </div>
                    </div>
                    <%- include('partials/footer')%>
                </div>
        </div>

        <script>
            const addUnitForm = document.getElementById('addUnitForm');
            document.getElementById('addUnitForm').addEventListener('submit', function (event) {
                event.preventDefault()
                const formData = new FormData(addUnitForm);
                fetch('/data/units/add', {
                    method: 'POST',
                    body: formData,
                }).then((response) => {
                    window.location.href = '/units'
                })
            });
        </script>
    </body>