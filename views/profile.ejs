<%- include('partials/header')%>

    <body id="page-top">
        <!-- Page Wrapper -->
        <div id="wrapper">
            <%- include('partials/sidebar menu')%>
                <!-- Content Wrapper -->
                <div id="content-wrapper" class="d-flex flex-column">
                    <!-- Main Content -->
                    <div id="content">
                        <%- include('partials/topbar menu')%>
                            <!-- Begin Page Content -->
                            <div class="container-fluid">
                                <!-- Page Heading -->
                                <% if(info.length > 0) {%>
                                    <div class="alert alert-danger mt-3" role="alert">
                                      <%= info %>
                                    </div>
                                <% } %>
                                <% if(success.length > 0) {%>
                                    <div class="alert alert-success mt-3" role="alert">
                                      <%= success %>
                                    </div>
                                <% } %>
                                <h3 class="h3 mb-2 text-gray-800">Profile</h3>

                                <div class="card shadow mb-4">
                                    <div class="card-header">
                                        <h5 class="m-0 font-weight-bold text-primary">Your Profile</h5>
                                    </div>
                                    <div class="card-body">
                                        <form id="editProfileForm" method="post">
                                            <div class="row mb-3">
                                                <label for="email" class="col-form-label col-md-2">Email</label>
                                                <div class="col-md-10 pl-0">
                                                    <input type="email" class="form-control" id="email" name="email"
                                                        required placeholder="insert email" value="<%= data[0].email %>">
                                                </div>
                                            </div>
                                            <div class="row mb-3">
                                                <label for="name" class="col-form-label col-md-2">Name</label>
                                                <div class="col-md-10 pl-0">
                                                    <input type="text" class="form-control" id="name" name="name"
                                                        required placeholder="insert name" value="<%= data[0].name %>">
                                                </div>
                                            </div>
                                    </div>
                                    <div class="card-footer">
                                        <button type="submit" class="btn btn-success btn-icon-split">
                                            <span class="icon text-white-50">
                                                <i class="fa-solid fa-database"></i>
                                            </span>
                                            <span class="text">Update</span>
                                        </button>
                                        </form>
                                    </div>
                                </div>

                            </div>
                    </div>
                    <%- include('partials/footer')%>
                </div>
        </div>

        <script>
        </script>
    </body>