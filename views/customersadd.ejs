<%- include('partials/header')%>

    <body id="page-top">
        <!-- Page Wrapper -->
        <div id="wrapper">
            <%- include('partials/sidebar menu')%>
                <!-- Content Wrapper -->
                <div id="content-wrapper" class="d-flex flex-column">
                    <!-- Main Content -->
                    <div id="content">
                        <%- include('partials/topbar menu')%>
                            <!-- Begin Page Content -->
                            <div class="container-fluid">
                                <!-- Page Heading -->
                                <h3 class="h3 mb-2 text-gray-800">Customers</h3>

                                <div class="card shadow mb-4">
                                    <div class="card-header">
                                        <h5 class="m-0 font-weight-bold text-primary">Form add</h5>
                                    </div>
                                    <div class="card-body">
                                        <form id="addCustomerForm">
                                            <div class="row mb-3">
                                                <label for="name" class="col-form-label col-md-2">Name</label>
                                                <div class="col-md-10 pl-0">
                                                    <input type="text" class="form-control" id="name" name="name"
                                                        required placeholder="insert customer name">
                                                </div>
                                            </div>
                                            <div class="row mb-3">
                                                <label for="address" class="col-form-label col-md-2">Address</label>
                                                <div class="col-md-10 pl-0">
                                                    <textarea type="text" class="form-control" id="address"
                                                        name="address" required placeholder="insert customer address"></textarea>
                                                </div>
                                            </div>
                                            <div class="row mb-3">
                                            <label for="phone" class="col-form-label col-md-2">Phone</label>
                                            <div class="col-md-10 pl-0">
                                                <input type="tel" class="form-control" id="phone" name="phone" required
                                                    placeholder="insert phone number">
                                            </div>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <button type="submit" class="btn btn-success btn-icon-split">
                                        <span class="icon text-white-50">
                                            <i class="fa-solid fa-database"></i>
                                        </span>
                                        <span class="text">Save</span>
                                    </button>
                                    </form>
                                    <a href="/customers" class="btn btn-warning btn-icon-split">
                                        <span class="icon text-white-50">
                                            <i class="fa-solid fa-rotate-left"></i>
                                        </span>
                                        <span class="text">Back</span>
                                    </a>
                                </div>
                            </div>
                    </div>
                    <%- include('partials/footer')%>
                </div>
        </div>
        </div>

        <script>
            const addCustomerForm = document.getElementById('addCustomerForm');
            document.getElementById('addCustomerForm').addEventListener('submit', function (event) {
                event.preventDefault()
                const formData = new FormData(addCustomerForm);
                fetch('/data/customers/add', {
                    method: 'POST',
                    body: formData,
                }).then((response) => {
                    window.location.href = '/customers'
                })
            });
        </script>
    </body>